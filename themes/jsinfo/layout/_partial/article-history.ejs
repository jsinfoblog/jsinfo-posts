<article>
  <% if (item.photos && item.photos.length) { %>
    <div class="article-featured-image">
      <a href="<%- config.root %><%- item.path %>" rel="featured_image_<%= item._id %>">
        <img src="<%- url_for(item.photos[0]) %>" itemprop="image">
      </a>
    </div>
  <% } %>
  <h1>
    <a href="<%- config.root %><%- item.path %>">
      <%- item.title %>
    </a>
  </h1>
  <p class="article-meta">
    <% if(item.author) { %>
        <span>توسط <%- item.author %> </span>
    <% } %>
    <span>در تاریخ <%= item.date.format(config.date_format) %></span>
  </p>
  <%- item.excerpt || item.content %>
  <% if(item.excerpt) { %>
    <div class="article-more">
      <a href="<%- config.root %><%- item.path %>" class="article-more">
        مطالعه بیشتر ...
      </a>
    </div>
  <% } %>
</article>
